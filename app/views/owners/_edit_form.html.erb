<div class="container">
    <%= form_with(model: @owner, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.text_field :email, class: "form-control", placeholder: "Email"%>
      </div>
      <div class="mb-3">
        <%= f.label :password, "Původní heslo", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Heslo"%>
      </div>
      <div class="mb-3">
        <%= f.submit "Změnit", class: "btn btn-warning" %>
      </div>
    <% end %>
</div>